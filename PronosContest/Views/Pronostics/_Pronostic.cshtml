@model PronosContest.Models.PronosticsModel

@{
	if (Model != null)
	{
		<div class="hidden-xs hidden-sm">
			<tr>
				<td width="130px">
					<div class="form-group">
						<label>@Model.DateHeure</label>
					</div>
				</td>
				<td width="27%">
					<div class="form-group text-right text-primary">
						&nbsp;
						<label class="hidden-sm hidden-xs">@Model.EquipeAName</label>
						<label class="hidden-md hidden-lg">@Model.EquipeAShortName</label>
						<span style="width:20px;"><img src="@Model.LogoUrlEquipeA" width="20" /></span>
						&nbsp;
					</div>
				</td>
				<td width="80px">
					<center>
						<div class="form-group">
							@{
								if (Model.IsReadOnly)
								{
									<span class="text-primary">@Model.ButsA</span>
									if (Model.PenaltiesA > 0)
									{
										<span class="text-primary">(@Model.PenaltiesA)</span>
									}
								}
								else
								{
									<div class="input-group input-group-sm" style="width:100px;">
										<span class="input-group-btn">
											<a href="#" class="btn btn-primary" onclick="RemoveGoalScoreOnClick($(this),'prono@(Model.MatchID)_ButsA','@(Model.ConcoursID)','@(Model.GroupeModel.ID)','@(Model.MatchID)','@(Model.EquipeAID)','@(Model.EquipeBID)','false','@(Model.IsNewProno.ToString())');return false;"><i class="fa fa-minus"></i></a>
										</span>
										@Html.TextBox("prono" + Model.MatchID + "_ButsA", Model.ButsA, "", new { @class = "form-control text-center", onchange = "SetScore('" + Model.ConcoursID + "','" + Model.GroupeModel.ID + "','" + Model.MatchID + "','" + Model.EquipeAID + "','" + Model.EquipeBID + "','false',$(this).val(), '" + Model.IsNewProno.ToString() + "');" })
										<span class="input-group-btn">
											<a href="#" class="btn btn-primary" onclick="AddGoalScoreOnClick($(this),'prono@(Model.MatchID)_ButsA','@(Model.ConcoursID)','@(Model.GroupeModel.ID)','@(Model.MatchID)','@(Model.EquipeAID)','@(Model.EquipeBID)','false','@(Model.IsNewProno.ToString())');return false;"><i class="fa fa-plus"></i></a>
										</span>
									</div>
									if (Model.GroupeModel.TypePhaseFinale != null)
									{
										<div class="form-group" style="display:inline-block;">
											<div class="input-group input-group-sm" style="width:100px;">
												<span class="input-group-btn">
													<a href="#" class="btn btn-primary" onclick="RemoveGoalPenaltyScoreOnClick($(this),'prono@(Model.MatchID)_ButsPenaltiesA','@(Model.ConcoursID)','@(Model.GroupeModel.ID)','@(Model.MatchID)','@(Model.EquipeAID)','@(Model.EquipeBID)','false','@(Model.IsNewProno.ToString())');return false;"><i class="fa fa-minus"></i></a>
												</span>
												@Html.TextBox("prono" + Model.MatchID + "_ButsPenaltiesA", Model.PenaltiesA, "", new { @class = "form-control text-center", placeholder = "P", onchange = "SetScorePenalties('" + Model.ConcoursID + "','" + Model.GroupeModel.ID + "','" + Model.MatchID + "','" + Model.EquipeAID + "','" + Model.EquipeBID + "','false',$(this).val(), '" + Model.IsNewProno.ToString() + "');" })
												<span class="input-group-btn">
													<a href="#" class="btn btn-primary" onclick="AddGoalPenaltyScoreOnClick($(this),'prono@(Model.MatchID)_ButsPenaltiesA','@(Model.ConcoursID)','@(Model.GroupeModel.ID)','@(Model.MatchID)','@(Model.EquipeAID)','@(Model.EquipeBID)','false','@(Model.IsNewProno.ToString())');return false;"><i class="fa fa-plus"></i></a>
												</span>
											</div>
										</div>
									}
								}
							}
						</div>
					</center>
				</td>
