				</td>
				<td width="10px">
					@{
						if (!Model.IsNewProno)
						{
							<a href="@Url.Action("InformationsPronostic", "Pronostics", new { pIdConcours = Model.ConcoursID, pIdMatch = Model.MatchID })"><i class="fa fa-info-circle text-primary"></i></a>
						}
						else if (Model.IsReadOnly)
						{
							<a href="@Url.Action("InformationsPronostic", "Pronostics", new { pIdConcours = Model.ConcoursID, pIdMatch = Model.MatchID, pIsNewProno = Model.IsNewProno })"><i class="fa fa-info-circle text-primary"></i></a>
						}
					}
