@model List<PronosContest.Models.GenericStatViewModel>

@{
	ViewBag.Title = "Statistiques";
	Layout = "~/Views/Shared/_Layout.cshtml";

	var concoursID = Request.Params["pConcoursID"];
}

<div class="row">
	@{
		if (this.Model != null && this.Model.Any())
		{
			foreach (var stat in this.Model)
			{
				<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
					@{
						Html.RenderPartial("_WidgetStats", stat);
					}
				</div>
			}
		}
	}
</div>

<footer class="hidden-lg hidden-md">
	<div class="navbar navbar-fixed-bottom">
		<div class="container">
			<div class="row">
				<div class="col-xs-3 text-center">
					<a href="@Url.Action("ClassementConcours", "Pronostics", new { pConcoursID = concoursID })" class="btn btn-primary" title="Classement" style="border:none; display:block; width:100%;">
						<i class="fa fa-trophy fa-2x"></i>
					</a>
				</div>
				<div class="col-xs-3 text-center">
					<a href="@Url.Action("SaisirPronostics", "Pronostics", new { pConcoursID = concoursID })" class="btn btn-primary" title="Vos pronostics" style="border:none; display:block; width:100%;">
						<i class="fa fa-pencil fa-2x"></i>
					</a>
				</div>
				<div class="col-xs-3 text-center">
					<a href="@Url.Action("ScoresMatch", "Pronostics", new { pConcoursID = concoursID })" class="btn btn-primary" title="Résultats des matchs" style="border:none; display:block; width:100%;">
						<i class="fa fa-soccer-ball-o fa-2x"></i>
					</a>
				</div>
				<div class="col-xs-3 text-center">
					<a href="#" class="btn btn-primary" title="Statistiques du concours" style="border:none; display:block; width:100%;">
						<i class="fa fa-bar-chart fa-2x"></i>
					</a>
				</div>
			</div>
		</div>
	</div>
</footer>