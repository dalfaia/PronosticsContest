@model PronosContest.Models.LogInModel
@{
	Layout = "~/Views/Shared/_LayoutPublic.cshtml";
    ViewBag.Title = "Connectez-vous";
	
}

<div class="panel-heading">
	<h3 class="panel-title">@ViewBag.Title</h3>
</div>
<div class="panel-body">
    @Html.ValidationSummary(false, "", new { @style = "color:red;" })
	@using (Html.BeginForm())
	{
		<fieldset>
			<div class="form-group">
				@Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder="E-mail", autofocus = "true" })
			</div>
			<div class="form-group">
				@Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Password", type = "password" })
			</div>
			<!-- Change this to a button or input when using this as a form -->
			<button class="btn btn-lg btn-success btn-block" type="submit">Se connecter</button>
		</fieldset>
	}
</div>

